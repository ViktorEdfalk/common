<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns="urn:riv:clinicalprocess:healthcond:certificate:1"
  xmlns:c="urn:riv:clinicalprocess:healthcond:certificate:types:1"
  xmlns:ext="urn:riv:clinicalprocess:healthcond:certificate:rli:1"
  xmlns:iso="urn:iso:21090:dt:1"
  targetNamespace="urn:riv:clinicalprocess:healthcond:certificate:1"
  elementFormDefault="qualified" attributeFormDefault="unqualified"
  version="1.0">

  <xs:import namespace="urn:iso:21090:dt:1" schemaLocation="core_components/iso_dt_subset_1.0.xsd"/>
  <xs:import namespace="urn:riv:clinicalprocess:healthcond:certificate:rli:1" schemaLocation="transport_model_extension.xsd"/>

  <xs:import namespace="urn:riv:clinicalprocess:healthcond:certificate:types:1"
    schemaLocation="core_components/clinicalprocess_healthcond_certificate_types_1.0.xsd"/>
    
  <xs:element name="utlatande" type="utlatandeType" />

  <xs:complexType name="utlatandeType">
    <xs:sequence>
      <xs:element name="utlatande-id" type="c:utlatandeId" />
      <xs:element name="typAvUtlatande" type="c:utlatandeTyp" />
      <xs:element name="kommentar" type="xs:string"
        minOccurs="0" maxOccurs="unbounded" />
      <xs:element name="signeringsdatum" type="c:dateTime" />
      <xs:element name="skickatdatum" type="c:dateTime"
        minOccurs="0" />

      <xs:element name="patient" type="patientType" />
      <xs:element name="skapadAv" type="hosPersonalType" />
      
      <xs:element name="aktivitet" type="aktivitetType"
                  maxOccurs="unbounded"/>
      <xs:element name="rekommendation" type="rekommendationType"
                  maxOccurs="unbounded"/>
      <xs:element name="observation" type="observationType"
                  maxOccurs="unbounded"/>

      <xs:element ref="ext:arrangemang"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="patientType">
    <xs:sequence>
      <xs:element name="person-id" type="c:personId"/>
      <xs:element name="fornamn" type="xs:string" maxOccurs="unbounded"/>
      <xs:element name="efternamn" type="xs:string"/>
      <xs:element name="postadress" type="xs:string"/>
      <xs:element name="postnummer" type="xs:string"/>
      <xs:element name="postort" type="xs:string"/>

      <xs:element name="patientRelation" type="patientRelationType"
                  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="patientRelationType">
    <xs:sequence>
      <xs:element name="relationskategori" type="iso:CD"/>
      <xs:element name="relationTyp" type="iso:CD" maxOccurs="unbounded"/>
      <xs:element name="person-id" type="c:personId" minOccurs="0"/>
      <xs:element name="fornamn" type="xs:string" maxOccurs="unbounded"/>
      <xs:element name="efternamn" type="xs:string"/>
      <xs:element name="mellannamn" type="xs:string" minOccurs="0"
                  maxOccurs="unbounded"/>
      <xs:element name="postadress" type="xs:string" minOccurs="0"/>
      <xs:element name="postnummer" type="xs:string" minOccurs="0"/>
      <xs:element name="postort" type="xs:string" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="aktivitetType">
    <xs:sequence>
      <xs:element name="aktivitetskod" type="iso:CD"/>
      <xs:element name="aktivitetstid" type="c:partialDateInterval"
                  minOccurs="0"/>
      <xs:element name="beskrivning" type="xs:string" minOccurs="0"/>

      <xs:element name="utforsVidEnhet" type="enhetType"
                  minOccurs="0"/>
      <xs:element name="beskrivsAv" type="utforarrollType"
                  minOccurs="0" maxOccurs="unbounded"/>

      <xs:element ref="ext:plats" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="utforarrollType">
    <xs:sequence>
      <xs:element name="utforartyp" type="iso:CD"/>

      <xs:element name="antasAv" type="hosPersonalType" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="rekommendationType">
    <xs:sequence>
      <xs:element name="rekommendationskod" type="iso:CD"/>
      <xs:element name="beskrivning" type="xs:string" minOccurs="0"/>
      <xs:element name="sjukdomskannedom" type="iso:CD"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="observationType">
    <xs:sequence>
      <xs:element name="observationskod" type="iso:CD" />
      <xs:element name="observationsperiod" type="c:partialDateInterval" minOccurs="0" maxOccurs="1"/>
      <xs:element name="utforsAv" type="utforarrollType" minOccurs="0" />
      <xs:element ref="ext:plats" maxOccurs="1" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="hosPersonalType">
    <xs:sequence>
      <xs:element name="personal-id" type="iso:II">
        <xs:annotation>
          <xs:documentation>HSA-id, o.i.d för HSA-id är 1.2.752.129.2.1.4.1</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="fullstandigtNamn" type="xs:string" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Förnamn + efternamn sammanslaget.
            Är tomt om personen har en skyddad identitet.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <!-- Skyddad identitet -->
      <xs:element name="forskrivarkod" type="xs:string" minOccurs="0"/>
      <xs:element name="befattning" type="xs:string" minOccurs="0"/>
      <xs:element name="enhet" type="enhetType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="enhetType">
    <xs:sequence>
      <xs:element name="enhets-id" type="c:hsaId">
        <xs:annotation>
          <xs:documentation>HSA-id, o.i.d för HSA-id är 1.2.752.129.2.1.4.1</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="arbetsplatskod" type="c:arbetsplatsKod" minOccurs="0">
        <xs:annotation>
          <xs:documentation>o.i.d för arbetsplatskod är 1.2.752.29.4.71</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="enhetsnamn" type="xs:string"/>
      <xs:element name="postadress" type="xs:string" minOccurs="0"/>
      <xs:element name="postnummer" type="xs:string" minOccurs="0"/>
      <xs:element name="postort" type="xs:string" minOccurs="0"/>
      <xs:element name="telefonnummer" type="xs:string" minOccurs="0"/>
      <xs:element name="epost" type="xs:string" minOccurs="0"/>
      <xs:element name="vardgivare" type="vardgivareType"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="vardgivareType">
    <xs:sequence>
      <xs:element name="vardgivare-id" type="c:hsaId">
        <xs:annotation>
          <xs:documentation>HSA-id, o.i.d för HSA-id är 1.2.752.129.2.1.4.1</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="vardgivarnamn" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

</xs:schema>