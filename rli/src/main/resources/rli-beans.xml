<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="se.inera.certificate.modules.rli.rest.ModuleService" />

  <bean
    class="se.inera.certificate.modules.rli.model.converter.TransportToExternalConverter" />

  <bean
    class="se.inera.certificate.modules.rli.model.converter.ExternalToTransportConverter" />

  <bean class="se.inera.certificate.modules.rli.validator.Validator" />

  <bean
    class="se.inera.certificate.modules.rli.model.converter.ExternalToInternalConverter" />

  <bean
    class="se.inera.certificate.modules.rli.model.converter.InternalToExternalConverter" />


  <bean class="se.inera.certificate.modules.rli.pdf.PdfGenerator">
    <constructor-arg value="true" />
  </bean>

  <bean
    class="se.inera.certificate.modules.rli.model.converter.WebcertModelFactory" />

  <bean id="rliEntryPoint" class="se.inera.certificate.modules.rli.support.RliEntryPoint" />

</beans>