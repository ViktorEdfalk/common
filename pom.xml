<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>se.inera.intyg</groupId>
    <artifactId>intyg-parent</artifactId>
    <version>1.3-SNAPSHOT</version>
  </parent>
  
  <groupId>se.inera.certificate.modules</groupId>
  <artifactId>certificates</artifactId>
  <packaging>pom</packaging>
  <name>Inera Certificate Modules</name>
  
  <properties>
    <!-- Project dependencies -->
    <rli.version>1.1-SNAPSHOT</rli.version>
    
    <!-- Dependencies to Intygstjansten -->
    <inera.certificate.version>1.3-SNAPSHOT</inera.certificate.version>
    <!--<inera.certificate.certificate-specifications.version>1.1.1</inera.certificate.certificate-specifications.version>-->    
    
    <!-- Dependencies to Netcare -->
    <mvkintegration.version>1.2-SNAPSHOT</mvkintegration.version>
    
    <checkstyle.basedir>${project.basedir}</checkstyle.basedir>
    <!-- <requirejs-plugin.version>2.0.4</requirejs-plugin.version> -->
  </properties>

  <modules>
    <module>module-support</module>
    <module>common-webjar</module>
    <module>integration-util</module>
    <module>fk7263</module>
    <module>rli</module>
    <module>specifications</module>
    <module>ts-bas</module>
    <module>ts-diabetes</module>
  </modules>

  <scm>
    <connection>scm:git:https://${scm.host}/p/inera-certificate-modules/</connection>
    <tag>HEAD</tag>
  </scm>

  <dependencyManagement>
    <dependencies>
      <!-- Project dependencies -->
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>common-webjar</artifactId>
        <version>${project.parent.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>integration-util</artifactId>
        <version>${project.parent.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>module-support</artifactId>
        <version>${project.parent.version}</version>
      </dependency>
      
      <!-- Dependencies to Intygstjansten -->
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>module-api</artifactId>
        <version>${inera.certificate.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>schemas</artifactId>
        <version>${inera.certificate.version}</version>
      </dependency>
      <dependency>
        <groupId>se.inera.certificate</groupId>
        <artifactId>certificate-specifications</artifactId>
        <version>${inera.certificate.version}</version>
      </dependency>

      <!-- Netcare dependencies -->
      <dependency>
        <groupId>org.callistasoftware.netcare.commons</groupId>
        <artifactId>mvk-integration</artifactId>
        <version>${mvkintegration.version}</version>
      </dependency>
      
      <dependency>
        <groupId>org.springframework.security</groupId>
        <artifactId>spring-security-config</artifactId>
        <version>${spring.security.version}</version>        
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.springframework.security</groupId>
        <artifactId>spring-security-web</artifactId>
        <version>${spring.security.version}</version>        
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-expression</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-tx</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.springframework.security</groupId>
        <artifactId>spring-security-taglibs</artifactId>
        <version>${spring.security.version}</version>        
        <exclusions>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-expression</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
          </exclusion>
          <exclusion>
            <groupId>org.springframework</groupId>
            <artifactId>spring-tx</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
  
    </dependencies>
  </dependencyManagement>
  
  <dependencies>
    <!-- Webjars -->
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>angularjs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>angular-ui-bootstrap</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>momentjs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>requirejs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>requirejs-text</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <inherited>false</inherited>
        <executions>
          <execution>
            <id>unpack-webjar-dependencies</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.webjars</includeGroupIds>
              <outputDirectory>${project.build.directory}/webjardependenciestemp</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <inherited>false</inherited>
        <executions>
          <execution>
            <phase>process-test-resources</phase>
            <configuration>
              <target>
                <copy todir="${project.build.directory}/webjardependencies"  verbose="false">
                  <regexpmapper from="^(.*)[/\\].*[/\\](.*)$$" to="\1/\2"/>
                  <fileset dir="${project.build.directory}/webjardependenciestemp/META-INF/resources/webjars/">
                  </fileset>
                </copy>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
    </plugins>
  </build>

</project>
